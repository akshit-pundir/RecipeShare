<% layout('layouts/boilerplate') %>


<div class="flex items-center justify-center p-12 -mt-28">
    <div class="mx-auto w-full max-w-[550px] bg-white">
        <form action="/reciepe" method="post" class="validate-form" novalidate enctype="multipart/form-data">
            
            <div class="mb-5">
                <label for="title" class="mb-3 block text-base font-medium text-[#07074D]">Title</label>
                <input type="text" name="title" id="title" placeholder="Dish Name" required
                    class="w-full rounded-md border border-[#e0e0e0] bg-white py-3 px-6 text-base font-medium text-[#6B7280] outline-none focus:border-[#6A64F1] focus:shadow-md" />
                <p class="text-red-500 text-sm mt-1 hidden" id="titleError">Title is required.</p>
            </div>
<!-- 
            <div class="mb-5">
                <label for="image" class="mb-3 block text-base font-medium text-[#07074D]">Image Link</label>
                <input type="text" name="image" id="image" placeholder="Enter your Image Link" required
                    class="w-full rounded-md border border-[#e0e0e0] bg-white py-3 px-6 text-base font-medium text-[#6B7280] outline-none focus:border-[#6A64F1] focus:shadow-md" />
                <p class="text-red-500 text-sm mt-1 hidden" id="imageError">Image link is required.</p>
            </div> -->

            <div class="mb-5">
                <label for="image" class="mb-3 block text-base font-medium text-[#07074D]">Upload Image </label>
                <input type="file" id="image" name="image" placeholder="Please upload a image"
                    class="w-full text-gray-400 font-semibold text-sm bg-white border file:cursor-pointer cursor-pointer file:border-0 file:py-3 file:px-4 file:mr-4 file:bg-gray-100 file:hover:bg-gray-200 file:text-gray-500 rounded" />
                <p class="text-xs text-gray-400 mt-2">PNG, JPG SVG are Allowed.</p>
                
                <p class="text-red-500 text-sm mt-1 hidden" id="imageError">Image link is required.</p>


            </div>

            <div class="mb-5">
                <label for="youtube" class="mb-3 block text-base font-medium text-[#07074D]">YouTube Link</label>
                <input type="text" name="youtube" id="youtube" placeholder="Enter your YouTube link"
                    class="w-full rounded-md border border-[#e0e0e0] bg-white py-3 px-6 text-base font-medium text-[#6B7280] outline-none focus:border-[#6A64F1] focus:shadow-md" />
            </div>

            <div class="-mx-3 flex flex-wrap">
                <div class="w-full px-3 sm:w-1/2">
                    <div class="mb-5">
                        <label for="prepTime" class="mb-3 block text-base font-medium text-[#07074D]">Prep Time</label>
                        <input type="number" name="prepTime" id="prepTime" required
                            class="w-full rounded-md border border-[#e0e0e0] bg-white py-3 px-6 text-base font-medium text-[#6B7280] outline-none focus:border-[#6A64F1] focus:shadow-md" />
                        <p class="text-red-500 text-sm mt-1 hidden" id="prepTimeError">Prep time is required.</p>
                    </div>
                </div>
                <div class="w-full px-3 sm:w-1/2">
                    <div class="mb-5">
                        <label for="cookTime" class="mb-3 block text-base font-medium text-[#07074D]">Cook Time</label>
                        <input type="number" name="cookTime" id="cookTime" required
                            class="w-full rounded-md border border-[#e0e0e0] bg-white py-3 px-6 text-base font-medium text-[#6B7280] outline-none focus:border-[#6A64F1] focus:shadow-md" />
                        <p class="text-red-500 text-sm mt-1 hidden" id="cookTimeError">Cook time is required.</p>
                    </div>
                </div>
            </div>

            <div class="mb-5">
                <label for="ingredients" class="mb-3 block text-base font-medium text-[#07074D]">Ingredients</label>
                <input type="text" name="ingredients" id="ingredients" placeholder="Please Seperate Ingredients by ','   " required
                    class="w-full rounded-md border border-[#e0e0e0] bg-white py-3 px-6 text-base font-medium text-[#6B7280] outline-none focus:border-[#6A64F1] focus:shadow-md" />
                <p class="text-red-500 text-sm mt-1 hidden" id="ingredientsError">Ingredients are required.</p>
            </div>

            <div class="-mx-3 flex flex-wrap">
                <div class="w-full px-3 sm:w-1/2">
                    <div class="mb-5">
                        <label for="cusine" class="mb-3 block text-base font-medium text-[#07074D]">Cuisine</label>
                        <input type="text" name="cusine" id="cusine" required
                            class="w-full rounded-md border border-[#e0e0e0] bg-white py-3 px-6 text-base font-medium text-[#6B7280] outline-none focus:border-[#6A64F1] focus:shadow-md" />
                        <p class="text-red-500 text-sm mt-1 hidden" id="cusineError">Cuisine is required.</p>
                    </div>
                </div>
                <div class="w-full px-3 sm:w-1/2">
                    <div class="mb-5">
                        <label for="category" class="mb-3 block text-base font-medium text-[#07074D]">Category</label>
                        <input type="text" name="category" id="category" required
                            class="w-full rounded-md border border-[#e0e0e0] bg-white py-3 px-6 text-base font-medium text-[#6B7280] outline-none focus:border-[#6A64F1] focus:shadow-md" />
                        <p class="text-red-500 text-sm mt-1 hidden" id="categoryError">Category is required.</p>
                    </div>
                </div>
            </div>

            <div class="mb-5 pt-3">
                <label for="instruction" class="mb-5 block text-base font-semibold text-[#07074D] sm:text-xl">Instructions</label>
                <textarea name="instruction" id="instruction" placeholder="Write all instructions briefly" cols="30" rows="5"
                    class="w-full rounded-md border border-[#e0e0e0] bg-white py-2 px-8 text-base font-medium text-[#6B7280] outline-none focus:border-[#6A64F1] focus:shadow-md" required></textarea>
                <p class="text-red-500 text-sm mt-1 hidden" id="instructionError">Instructions are required.</p>
            </div>

            <div>
                <button type="submit"
                    class="hover:shadow-form w-full rounded-md bg-[#6A64F1] py-3 px-8 text-center text-base font-semibold text-white outline-none">
                    Submit
                </button>
            </div>
        </form>
    </div>
</div>

<script src="/javascript/validateForm.js"></script>









