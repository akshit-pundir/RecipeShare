<% if(success && success.length>0) {%>

  <div  id="alert"   class="bg-green-100 border border-green-400 max-w-[50%]  text-green-700 px-4 py-3 rounded relative ml-5" role="alert">
 
    <span class="block sm:inline"> <%= success %>  </span>
    <button type="button" class="absolute top-0 bottom-0 right-0 px-4 py-3" aria-label="Close" onclick="closeAlert()">
      <span class="text-green-700" aria-hidden="true">&times;</span>
    </button>
  </div>
  
  <% } %>

<% if(error && error.length>0) {%>


  <div  id="alert"   class="bg-red-100 border border-red-400 max-w-[50%] text-red-700 px-4 py-3 rounded relative -mt-5 ml-5" role="alert">
 
    <span class="block sm:inline"> <%=error %>  </span>
    <button type="button" class="absolute top-0 bottom-0 right-0 px-4 py-3" aria-label="Close" onclick="closeAlert()">
      <span class="text-red-700" aria-hidden="true">&times;</span>
    </button>
  </div>
 
  <% } %>






  <script>
    function closeAlert() {
      document.getElementById('alert').style.display = 'none';
    }
  </script>