<% layout('layouts/boilerplate') %>

<div class="grid grid-cols-3 grid-flow-row gap-10 mx-14 my-8">
<% for(data of allReciepes){ %>
    <div class="relative flex flex-col mt-6 text-gray-700 bg-white shadow-lg bg-clip-border rounded-xl w-96">
        <div
          class="relative h-56 mx-4 -mt-6 overflow-hidden text-black shadow-lg bg-clip-border rounded-xl bg-blue-gray-500 shadow-blue-gray-500/40">
          <img
            src="<%= data.strMealThumb %>"
            alt="card-image" />
        </div>
        <div class="p-6">
          <h5 class="block mb-2 font-sans text-xl antialiased font-semibold leading-snug tracking-normal text-blue-gray-900">
            <%= data.strMeal %>
          </h5>
          <p class="block font-sans text-base antialiased font-light leading-relaxed text-inherit text-wrap">
            This meal is a culinary delight that promises to tantalize your taste buds. Each bite is a symphony of flavors,
             perfectly balanced and exquisitely prepared. The freshness of the ingredients shines through, with vibrant veget
             ables and aromatic herbs coming together in perfect harmony. 
             

          </p>
        </div>
        <div class="p-6 pt-0">
         <a href="/reciepe/<%= data.idMeal %>">
            <button
            class="align-middle select-none font-sans font-bold text-center uppercase transition-all disabled:opacity-50 disabled:shadow-none disabled:pointer-events-none text-xs py-3 px-6 rounded-lg bg-gray-900 text-white shadow-md shadow-gray-900/10 hover:shadow-lg hover:shadow-gray-900/20 focus:opacity-[0.85] focus:shadow-none active:opacity-[0.85] active:shadow-none"
            type="button">
            Read More
          </button>
        </a>
        </div>
      </div>  
   
   
   
   
  

    <% } %>




